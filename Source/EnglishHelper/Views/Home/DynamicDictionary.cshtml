@model IEnumerable<EnglishHelper.Models.DynamicDictionary.DyctionaryItem>

@{
    ViewBag.Title = "DynamicDictionary";
}

<div class="row">
    <div class="col-md-4">
        <h2>Слова из словаря</h2>
        <p>
            Набор слов, которые мы извлекли из словаря.
        </p>
        <p>
            @{ var grid = new WebGrid(Model, canPage: false);}  
            <div>  
  
                @grid.GetHtml(tableStyle: "table table-bordered table-responsive table-hover",  
                    columns: grid.Columns(  
                        grid.Column("Word", "Слово"),
                        grid.Column("Translate", "Перевод") 
                        )  
                    )  
            </div>  
        </p>
    </div>
</div>
